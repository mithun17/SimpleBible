<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SimpleBible" parent="Base.Theme.SimpleBible">

        <item name="bottomSheetDialogTheme">@style/AppBottomSheetDialogTheme</item>

        <item name="colorPrimary">@color/primaryLightColor</item>
        <item name="colorPrimaryVariant">@color/primaryColorLightVariant</item>
        <item name="colorSecondary">@color/secondaryLightColor</item>
        <item name="colorSecondaryVariant">@color/secondaryDarkColor</item>
        <!--colorBackground appears behind scrollable content and is used for the default window-->
        <!--background. colorSurface is mapped to the surface of components such as cards, sheets-->
        <!--and menus. colorError is used to indicate an error state for components such as-->
        <!--text fields.-->
        <item name="android:colorBackground">@color/primaryDarkColor</item>
        <item name="colorSurface">@color/primaryLightColor</item>
        <item name="colorError">@color/red_600</item>
        <!--"On" colors define how text, icons and strokes are colored in relation to the surface-->
        <!--on which they appear.-->
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorOnSecondary">@color/primaryLightColor</item>
        <item name="colorOnBackground">@color/white</item>
        <item name="colorOnSurface">@color/white</item>
        <item name="colorOnError">@color/white</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="CardViewStyle" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/windowBackgroundDM</item>
    </style>

    <style name="Toolbar.Text" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/primaryText</item>
    </style>


    <style name="Widget.AppCompat.ActionBar" parent="Widget.AppCompat.ActionBar.Solid">
        <item name="background">@color/primaryColorLightVariant</item>
        <item name="elevation">4dp</item>
    </style>

    <style name="Toolbar" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:background">@color/primaryColorLightVariant</item>
        <item name="android:textColorPrimary">@color/primaryText</item>
        <item name="actionMenuTextColor">@color/primaryText</item>
        <item name="colorControlNormal">@color/primaryText</item>
        <item name="colorControlHighlight">@color/primaryLightColor</item>
    </style>

    <style name="AppActionBarTitle" parent="Widget.MaterialComponents.ActionBar.Solid">
        <item name="android:textColor">@color/primaryText</item>
    </style>

    <!-- BottomSheet style -->
    <style name="AppBottomSheetDialogTheme" parent="Theme.MaterialComponents.BottomSheetDialog">
        <item name="drawableTint">@color/white</item>
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
    </style>

    <style name="AppModalStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/round_corner</item>
        <item name="android:backgroundTint">@color/windowBackgroundDM</item>
    </style>

    <style name="Base.Theme.SimpleBible" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:statusBarColor" tools:ignore="NewApi">@color/primaryColorLightVariant</item>
        <item name="android:windowLightStatusBar" tools:ignore="NewApi">true</item>
    </style>
</resources>
