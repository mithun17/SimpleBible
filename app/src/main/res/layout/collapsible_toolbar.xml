<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.appbar.AppBarLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/appBar"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:fitsSystemWindows="true">

    <com.google.android.material.appbar.CollapsingToolbarLayout
        android:id="@+id/ctbAppBar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/expanded_appbar_gradient"
        android:fitsSystemWindows="true"
        app:collapsedTitleTextAppearance="@style/Headline6"
        app:contentScrim="@color/primaryColorLightVariant"
        app:expandedTitleGravity="bottom"
        app:expandedTitleMarginEnd="@dimen/activity_horizontal_margin"
        app:expandedTitleMarginStart="@dimen/activity_horizontal_margin"
        app:expandedTitleTextAppearance="@style/Headline3.PrimaryTextDarkBg"
        app:layout_scrollFlags="scroll|exitUntilCollapsed"
        tools:title="Collapsible toolbar">

        <include
            android:id="@+id/toolbar"
            layout="@layout/toolbar_drop_down"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:layout_collapseMode="pin" />

    </com.google.android.material.appbar.CollapsingToolbarLayout>

</com.google.android.material.appbar.AppBarLayout>