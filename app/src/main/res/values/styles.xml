    <!-- H1 -->
    <style name="Headline1" parent="TextAppearance.MaterialComponents.Headline1">
        <item name="fontFamily">@font/quicksand_light</item>
        <item name="android:fontFamily">@font/quicksand_light</item>
        <item name="android:textSize">96sp</item>
    </style>

    <!-- H2 -->
    <style name="Headline2" parent="TextAppearance.MaterialComponents.Headline2">
        <item name="fontFamily">@font/quicksand_light</item>
        <item name="android:fontFamily">@font/quicksand_light</item>
        <item name="android:textSize">60sp</item>
    </style>

    <!-- H3 -->
    <style name="Headline3" parent="TextAppearance.MaterialComponents.Headline3">
        <item name="fontFamily">@font/quicksand_regular</item>
        <item name="android:fontFamily">@font/quicksand_regular</item>
        <item name="android:textSize">48sp</item>
    </style>

    <style name="Headline3.PrimaryTextDarkBg" parent="TextAppearance.MaterialComponents.Headline3">
        <item name="android:textColor">@color/primaryTextDarkBg</item>
    </style>

    <!-- H4 -->
    <style name="Headline4" parent="TextAppearance.MaterialComponents.Headline4">
        <item name="fontFamily">@font/quicksand_regular</item>
        <item name="android:fontFamily">@font/quicksand_regular</item>
