<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">
    <PreferenceCategory
        app:icon="@drawable/ic_theme"
        app:title="@string/preference_title_theme">
        <SwitchPreferenceCompat
            app:defaultValue="false"
            app:key="@string/preference_theme_key"
            app:title="@string/preference_theme_title" />
    </PreferenceCategory>

    <PreferenceCategory app:title="Beta">
        <Preference
            app:key="@string/preference_image_share_key"
            app:summary="@string/preference_image_share_summary"
            app:title="@string/preference_image_share_title" />
    </PreferenceCategory>
</PreferenceScreen>